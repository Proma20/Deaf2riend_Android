<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mist.edu.deaf2riend.actionradio"
    tools:showIn="@layout/app_bar_actionradio">

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:text="Set Your Name"
            android:textColor="#1b1994"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/radioButton7" />

        <RadioButton
            android:text="Fire Alarm"
            android:textColor="#1b1994"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:id="@+id/radioButton5" />

        <RadioButton
            android:text="Door Ball"
            android:textColor="#1b1994"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:id="@+id/radioButton6" />

    </RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Proceed"
        android:background="#a5bbf2"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:srcCompat="@drawable/homeb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
